/**index.wxss**/

.msg-item {
    width: 100%;
    height: 75px;
    border-bottom: 1px solid rgb(233, 233, 233);
    position: relative;
    overflow: hidden;
}

.msg {
    position: absolute;
    width: 100%;
    height: 100%;
    left:0;
    top:0;
    z-index: 100;
    background-color: #FFF;
    padding: 10px;
}
.msg-text {
    font-size: 80%;
    color: rgb(127, 127, 127);
}

.msg-menu {
    position: absolute;
    width: 100%;
    height: 100%;
    left:0;
    top:0;
    z-index: 0;
    display: flex;
    justify-content: flex-end;
}

.menu-delete {
    width: 75px;
    height: 100%;
    background-color: rgb(255, 58, 50);
    color:#FFF;
    text-align: center;
    line-height: 75px;
}